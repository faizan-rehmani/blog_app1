<div class="container">
  <section class="vh-90 gradient-custom">
    <div class="container py-5 h-100">
      <div class="row justify-content-center align-items-center h-100">
        <div class="col-12 col-lg-9 col-xl-7">
          <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
            <div class="card-body p-4 p-md-5">
              <%= form_with model: article do |form| %>
                <%= render "devise/shared/error_messages" , resource: article %>
                  <div class="row">
                    <div class="col-md-12 mb-4">
                      <div class="form-outline">
                        <%= form.text_field :title, class: "form-control form-control-lg" %>
                        <%= form.label :title, class: "form-label" %><br>
                      </div>
                    </div>
                    <div class="col-md-12 mb-4">
                      <div class="form-outline">
                        <%= form.text_area :body, class: "form-control form-control-lg" %>
                        <%= form.label :body, class: "form-label" %><br>
                      </div>
                    </div>
                  </div>

                  <div class="mt-4 pt-2">
                    <%= form.submit class: "btn btn-primary btn-lg"%>
                  </div>
                <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>