<div class="container my-5">
  <div class="p-5 text-center bg-body-tertiary rounded-3">
    <svg class="bi mt-4 mb-3" style="color: var(--bs-indigo);" width="100" height="100"><use xlink:href="#bootstrap"></use></svg>
    <h1 class="text-body-emphasis"><%= @article.title %></h1>
    <p class="col-lg-8 mx-auto fs-5 text-muted">
      <%= @article.body %>
    </p>
    <% if current_user&.has_role?(:author, @article) || current_user&.has_role?(:admin) %>
      <div class="d-inline-flex gap-2 mb-5">
        <%= link_to "Edit", edit_article_path(@article) ,class: "d-inline-flex align-items-center btn btn-primary btn-lg px-4 rounded-pill"%>
        <%= link_to 'Destroy', article_path(@article), class: "btn btn-outline-secondary btn-lg px-4 rounded-pill", 'data-turbo-confirm': 'Are you want to delete this article', 'data-turbo-method': :delete %>
      </div>
    <% end %>
  </div>
</div>